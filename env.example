# Compose profiles: dev or prod (comma-separated possible)
COMPOSE_PROFILES=dev

# App environment for entrypoint (affects reload/workers)
APP_ENV=dev

# API port exposed on host
API_PORT=8000

# PostgreSQL
POSTGRES_DB=marketplace
POSTGRES_USER=marketplace
POSTGRES_PASSWORD=marketplace
POSTGRES_PORT=5432
# Host port to bind postgres (avoid conflicts with other local DBs)
DB_HOST_PORT=5434

# Optional explicit SQLAlchemy URL (async driver)
# DATABASE_URL=postgresql+asyncpg://marketplace:marketplace@db:5432/marketplace
